LOCAL_PATH := $(call my-dir)

include $(CLEAR_VARS)

LOCAL_MODULE    := lory
LOCAL_SRC_FILES := $(wildcard @CMAKE_SOURCE_DIR@/src/lory/*.c) @CMAKE_SOURCE_DIR@/android/bridge.c
