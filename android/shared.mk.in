LOCAL_LDFLAGS   := -fopenmp
LOCAL_LDLIBS    := -llog -lm -ljnigraphics

LOCAL_C_INCLUDES += @CMAKE_SOURCE_DIR@/include

include $(BUILD_SHARED_LIBRARY)
